@model OrderManager.Models.Product

<div class="container mt-4">
    <h2 class="text-center mb-4">Novo Produto</h2>

    <div class="card shadow-lg p-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Nome:</label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CostPrice" class="form-label">Custo:</label>
                <input asp-for="CostPrice" class="form-control" required />
                <span asp-validation-for="CostPrice" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProfitPercentage" class="form-label">Precentual de Lucro:</label>
                <input asp-for="ProfitPercentage" class="form-control" required />
                <span asp-validation-for="ProfitPercentage" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Detalhes do Produto:</label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantidade:</label>
                <input asp-for="Quantity" class="form-control" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label">Foto do Produto:</label>
                <input type="file" name="Image" class="form-control"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a href="/Product" class="btn btn-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
