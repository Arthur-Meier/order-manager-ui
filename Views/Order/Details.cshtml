@model OrderManager.Models.Order

<div class="order-details-container">
    <h2 class="title">Detalhes do Pedido</h2>

    <div class="order-info">
        <p><strong>Cliente:</strong> @Model.Client.Name</p>
        <p><strong>Data do Pedido:</strong> @Model.OrderDate.ToShortDateString()</p>
        <p><strong>Total:</strong> @Model.TotalValue.ToString("C")</p>
    </div>

    <h3 class="subtitle">Itens do Pedido</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Preço Unitário</th>
                <th>Quantidade</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Order/Index" class="btn btn-secondary">Voltar</a>
</div>

<style>
    .order-details-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .title {
        color: #343a40;
        text-align: center;
        margin-bottom: 20px;
    }

    .order-info p {
        font-size: 18px;
        margin-bottom: 5px;
    }

    .subtitle {
        margin-top: 20px;
        font-size: 20px;
        color: #007bff;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        background: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

    .table th, .table td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    .table th {
        background: #007bff;
        color: white;
    }

    .btn-secondary {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 15px;
        background: #6c757d;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }
</style>